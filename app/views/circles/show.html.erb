<section class="text-gray-600 body-font overflow-hidden ">
  <div class="lg:w-4/5 mx-auto flex flex-wrap items-center">
    <%=  image_tag @circle.image.display_image, class: "lg:w-1/2 w-full lg:h-auto h-64 object-cover object-center rounded" if @circle.image.image.attached? %> 
    <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
      <h1 class="text-gray-900 text-3xl title-font font-medium mb-1"><%= @circle.name %></h1>
      <div class="flex mb-4 mt-2">
        <span class="flex items-center">
          <button class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500">
            <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
              <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
            </svg>
          </button>
          <span class="text-gray-600 ml-3">4 いいね</span>
        </span>
      </div>
      <p class="leading-relaxed mb-5"><%= @circle.description %></p>
      <div class="flex border-t border-gray-200 py-2">
        <span class="text-gray-500">活動場所</span>
        <span class="ml-auto text-gray-900"><%= @circle.active_place %></span>
      </div>
      <div class="flex border-t border-gray-200 py-2 justify-between">
        <span class="text-gray-500">活動日</span>
        <div>
          <% ['月', '火', '水', '木', '金', '土', '日'].each_with_index do |day_of_week, i| %>
            <span class="ml-1 text-gray-900 <%= 'py-1.5 px-2 rounded-full bg-blue-200 items-center justify-center' if @circle.active_days.include?(i) %>"><%= day_of_week %></span>
          <% end %>
        </div>
      </div>
      <div class="flex border-t border-gray-200 py-2">
        <span class="text-gray-500">活動時間</span>
        <span class="ml-auto text-gray-900"><%= @circle.circle_time.display_start_time %> ~ <%= @circle.circle_time.display_start_time %></span>
      </div>
      <div class="flex border-t border-gray-200 py-2">
        <span class="text-gray-500">人数</span>
        <span class="ml-auto text-gray-900"><%= @circle.number_of_people %>人</span>
      </div>
      <div class="flex border-t border-b mb-6 border-gray-200 py-2">
        <span class="text-gray-500">リンク</span>
        <span class="ml-auto text-gray-900"><%= @circle.link %></span>
      </div>
    </div>
  </div>
</section>