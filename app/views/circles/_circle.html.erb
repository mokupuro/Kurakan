<div class="w-full xl:w-1/2 p-4">
  <div class="bg-white p-4 sm:h-64 rounded-2xl shadow-lg flex flex-col sm:flex-row gap-5 select-none">
    <div class="h-52 sm:h-full sm:w-72 rounded-xl <%= 'bg-gray-200 animate-pulse' if !circle.image&.image&.attached? %>">
      <%= image_tag circle.image&.display_image, class: "w-full h-52 sm:h-full sm:w-72 rounded-xl object-cover object-center rounded" if circle.image&.image&.attached? %> 
    </div>
    <div class="flex flex-col flex-1 gap-5 sm:p-2">
      <div class="flex flex-1 flex-col gap-3">
        <div class="w-full h-14 rounded-2xl">
          <%= link_to circle.name, circle, { class: "text-gray-900 text-3xl title-font font-medium mb-1 truncate" } %>
        </div>
        <div class="<%= 'bg-gray-200 animate-pulse h-3' if circle.description.blank? %> w-full rounded-2xl">
          <p class="leading-relaxed mb-5 line-clamp-2"><%= circle.description %></p>
        </div>
      </div>
      <div class="mt-auto flex gap-3">
        <span class="flex items-center">
          <button class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500">
            <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
              <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
             </svg>
          </button>
          <span class="text-gray-600 ml-3">4 いいね</span>
        </span>
      </div>
    </div>
  </div>
</div>