<section class="text-gray-600 body-font container">
  <div class="flex flex-wrap flex-col">
    <%= form_with url: circles_path, method: :get, local: true, html: {class: "w-full flex flex-row justify-end gap-5"} do |f| %>
      <%= f.text_field :search, placeholder: "名前検索", class: "rounded-lg border border-gray-300 w-full md:w-1/3 py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" %>
      <%= f.submit '検索する',  { class: "flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-purple-600 rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-purple-200" } %>
    <% end %>
    <%= form_tag circles_path, method: :get, class: 'w-full flex flex-row flex-wrap mt-3 gap-2' do %>
      <div class="px-4 py-2  text-base rounded-full text-white bg-purple-600">
        <%= link_to "全て", circles_path %>
      </div>
      <% @categories.each do |category| %>
          <div class="px-4 py-2  text-base rounded-full text-white bg-purple-600">
            <%= link_to category.name, circles_path(category_id: category.id) %>
          </div>
      <% end %>
    <% end %>

    <div class="h-10 w-full"></div>
    <div class="w-full flex flex-wrap">
      <%= render @circles %>
    </div>
    <div class="mx-auto text-center my-4">
      <%= will_paginate %>
    </div>
  </div>
</section>